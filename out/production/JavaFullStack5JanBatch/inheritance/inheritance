3. class Employee{
	double salary;
	void display(){
		//display salary
	}
}
class PermanentEmployee extends Employee{
	double hike = 1.5;
	double calculateTotalSalary(){
		salary +(salary * hike/100)
	}
}
class TemporaryEmployee extends Employee{
double hike = 0.5;
	double calculateTotalSalary(){
		salary +(salary * hike/100)
	}
}
class EmployeeImpl{
	main(){

	}
}

